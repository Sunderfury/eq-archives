	<div id="edit1170023" style="padding:0px 0px 6px 0px">
	<!-- this is not the last post shown on the page -->	


<table id="post1170023" class="tborder" cellpadding="6" cellspacing="0" border="0" width="100%" align="center">
<tr>
	
		<td class="thead" style="font-weight:normal" >		
			<!-- status icon and date -->
			<a name="post1170023"><img class="inlineimg" src="images/legacy_images/statusicon/post_old.gif" alt="Old" border="0" /></a>
			June 26th, 2007, 09:31 AM
			
			<!-- / status icon and date -->				
		</td>
		<td class="thead" style="font-weight:normal" align="right">
			&nbsp;
			&nbsp;
			#<a href="showpost.php?s=1440ac0632d5e76f7b0d8fd53923ab3c&amp;p=1170023&amp;postcount=29" target="new" rel="nofollow" id="postcount1170023" name="29"><strong>29</strong></a>
			
