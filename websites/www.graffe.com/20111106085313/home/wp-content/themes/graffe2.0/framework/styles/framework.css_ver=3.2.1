

#fw-container{
	background: #F0F5F7;
	border: 1px solid #AEBAC9;
	-moz-border-radius: 10px;
	margin: 15px;
	width: 700px;
	overflow: hidden;
}

#fw-header{
	width: 660px;
	padding: 20px;
	background: -moz-linear-gradient(center bottom , #9DBDD3, #CEE0F2) repeat scroll 0 0 transparent;
	border-bottom: 1px solid #6D839D;
	-moz-border-radius: 10px 10px 0 0;
	overflow: hidden;
}

	#fw-header h1{
		margin: 0;
	}
	
#fw-groups{
	width: 700px;
	overflow: hidden;
	position: relative;
	z-index: 9999;
}

	#fw-groups ul{
		
	}
	
	#fw-groups ul li{
		border-right: 1px solid #ccc;
		margin: 0;
		float: left;
	}
	
	#fw-groups ul li:hover{

	}
	
	#fw-groups ul li.ui-tabs-selected{
		background: #fff;
	}
		
	#fw-groups ul li a{
		text-decoration: none;
		padding: 7px;
		display: block;
		color: #000;
	}
	


#fw-main{
	width: 660px;
	background: #fff;
	border-top: 1px solid #ccc;
	overflow: hidden;
	padding: 20px;
	margin-top: -1px;
	float: left;
}

	#fw-main h2{
		margin: 0 0 40px 0;
	}
	
	.option-block{
		margin: 20px 0;
		overflow: hidden;
	}
	
	.option-block label{
		display: block;
		color: #aaa;
		font-size: 16px;
		font-weight: bold;
		padding: 0 0  10px 0;
		margin: 0 0 15px 0;
		border-bottom: 1px solid #eee;
	}
	
	.fw-select-input{
		width: 350px;
		padding: 8px !important;
		font-size: 14px !important;
		height: auto !important;
	}	

	.fw-text-input{
		width: 350px;
		padding: 8px;
		font-size: 14px;
	}	
	
	textarea.fw-text-input{
		font-size: 12px;
		line-height: 18px;
		min-height: 150px;
	}
	
	.fw-color-code{
		margin: 0 0 0 10px;
		font-size: 16px;
		float: left;
		border: 1px solid #DFDFDF;
		-moz-border-radius: 4px;
		padding: 4px 8px;
	}
	
		.hex-sign{
			color: #999;
		}
	
	.fw-color-code-input{
		width: 70px;
		font-size: 14px;
		border: none !important;
		padding: 3px;
	}
	
	.fw-color-selector{
		width: 30px;
		height: 30px;
		border: 3px solid #000;
		cursor: pointer;
		float: left;
		-moz-border-radius: 5px;
	}
	
	.qq-upload-button{
		width: 80px;
		padding: 2px 3px;
		margin: 10px 0 0 0;
		float: left;
		border: 1px solid #aaa;
		-moz-border-radius: 4px;
	}
	
	.qq-upload-drop-area{
		display: none;
		padding: 10px;
		background: #eee;
		border: 1px solid #ccc;
		margin: 10px 0;
	}
	
	.qq-upload-list{
		display: none;
	}
	
	.fw-font-preview{
		margin: .7em 0 .5em 0;
	}
	
	.fw-image-preview, .fw-image-preview-icon{
		float: left;
		margin: 10px 0;
		clear: both;
	}	
	
		.fw-image-preview img{
			height: 100px;
		}
		
		.fw-image-preview-icon img{
			height: 32px;
		}
	
	.fw-input-image-url{
		width: 350px;
	}
	
	.fw-control{
		float: left;
		margin: 0 20px 0 0;
	}
	
	.fw-description{
		font-size: 10px;
		color: #999;
		overflow: hidden;
	}
	
#fw-submit{
	background: #AEBAC9;
}

#fw-footer{
	padding: 10px 20px;
	overflow: hidden;
	border-top: 1px solid #ccc;
}

	#nav-controls{
		position: fixed;
	}

	#nav-controls input{
		width: 148px;
		padding: 10px 0;
		cursor: pointer;
	}

#fw-shade{
	background: #000;
	opacity: .3;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	z-index: 99998;
	overflow: hidden;
	display: none;
}

#fw-loader{
	top: 50%;
	left: 50%;
	margin: -50px 0 0 -50px;
	padding: 10px;
	background: #fff;
	position: absolute;
	-moz-border-radius: 10px;
	font-size: 18px;
	line-height: 30px;
	z-index: 99999;
	opacity: .8;
	display: none;
}

	#fw-loader img{
		float: left;
		margin: 0 10px 0 0;
	}