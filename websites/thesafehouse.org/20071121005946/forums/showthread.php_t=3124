<!-- Post tools -->

	
	<a href="newreply.php?s=b85914ae4a0d9058f9328ec7e0ed2bb1&amp;do=newreply&amp;p=40229"><img src="images/buttons/quote.gif" alt="Reply With Quote" border="0" align="absmiddle" /></a>
	<a href="report.php?s=b85914ae4a0d9058f9328ec7e0ed2bb1&amp;p=40229"><img src="images/buttons/report.gif" alt="Report Bad Post" border="0" align="absmiddle" class="inlineimg" /></a>
	 &nbsp;
		<span class="pcount">#</span><a href="showpost.php?s=b85914ae4a0d9058f9328ec7e0ed2bb1&amp;p=40229&amp;postcount=15" target="new" rel="nofollow" id="postcount40229" name="15" class="pcount"><strong>15</strong></a>
		
